<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="413dp"
        android:layout_height="57dp"
        android:layout_marginBottom="1dp"
        android:background="@color/layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/home"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView3"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-5dp"
            android:gravity="center_horizontal"
            android:text="Home"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <ImageView
            android:id="@+id/btnsearch"
            android:layout_width="43dp"
            android:layout_height="38dp"
            android:layout_marginLeft="180dp"
            app:srcCompat="@drawable/search"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnsearch"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-5dp"
            android:text="Search"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginLeft="340dp"
            app:srcCompat="@drawable/list"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView7"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-4dp"
            android:text="List"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="259dp"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:text="Music Playre"
        android:textColor="#F4F3F3"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/btnneww"
        android:layout_width="414dp"
        android:layout_height="127dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/layout"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/picneww"
            android:layout_width="208dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/neww"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="The latest songs"
            android:textColor="#F8F6F6"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnbest"
        android:layout_width="416dp"
        android:layout_height="124dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/layout"
        app:layout_constraintTop_toBottomOf="@+id/btnneww"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/picbest"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/best"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="The best singers"
            android:textColor="#F8F6F6"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnday"
        android:layout_width="409dp"
        android:layout_height="124dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/layout"
        app:layout_constraintTop_toBottomOf="@+id/btnbest"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/picday"
            android:layout_width="207dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/today"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Top ten songs of the day"
            android:textColor="#F8F6F6"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnweek"
        android:layout_width="410dp"
        android:layout_height="124dp"
        android:layout_marginTop="15dp"
        android:background="@color/layout"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnday"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/picweek"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/week"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Top ten songs of the week"
            android:textColor="#F8F6F6"
            android:textSize="20sp"
            tools:ignore="HardcodedText,InefficientWeight" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>